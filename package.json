{
  "name": "ui-box",
  "version": "1.0.0-0",
  "description":
    "React Component that works as a UI Primitive for design systems.",
  "contributors": [
    "Jeroen Ransijn (https://twitter.com/jeroen_ransijn)",
    "Roland Warmerdam (https://roland.codes)"
  ],
  "keywords": ["react"],
  "repository": "segmentio/ui-box",
  "license": "MIT",
  "main": "lib/index.js",
  "files": ["lib"],
  "scripts": {
    "test": "xo && ava && size-limit",
    "prepublishOnly": "yarn run build",
    "precommit": "lint-staged",
    "dev": "start-storybook -p 9009",
    "build": "babel --source-maps inline --out-dir lib --ignore *.test.js src",
    "build-storybook": "build-storybook -s .storybook/static -o .out",
    "release": "np --no-publish",
    "benchmark": "react-benchmark tools/benchmark.js"
  },
  "dependencies": {
    "classnames": "^2.2.0",
    "glamor": "^2.20.0",
    "inline-style-prefixer": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "@storybook/react": "^3.2.12",
    "@storybook/storybook-deployer": "^2.2.0",
    "ava": "^0.24.0",
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint-config-prettier": "^2.7.0",
    "eslint-config-xo-react": "^0.15.0",
    "eslint-plugin-react": "^7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "np": "^2.18.3",
    "prettier": "^1.8.2",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-benchmark": "^1.0.4",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.2.0",
    "sinon": "^4.1.6",
    "size-limit": "^0.13.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": ["xo-react", "prettier", "prettier/react"],
    "envs": ["node", "browser"],
    "rules": {
      "indent": ["off"],
      "react/jsx-indent-props": ["off"],
      "react/jsx-indent": ["off"]
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.js": ["xo --fix", "prettier --write", "git add"],
    "*.{json,md}": ["prettier --write", "git add"]
  },
  "size-limit": [
    {
      "path": "lib/index.js",
      "limit": "17 KB"
    }
  ],
  "ava": {
    "require": ["babel-register", "./tools/enzyme-config"],
    "babel": "inherit"
  }
}
